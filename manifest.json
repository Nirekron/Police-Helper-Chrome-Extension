{
    "name": "Police Helper",
    "description": "Do you remember all the fines?",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mdt.swrp.cz/*"
            ],
            "js": [
                "jquery.min.js",
                "main.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "fines.json"
            ],
            "matches": ["https://mdt.swrp.cz/*"],
            "extension_ids": []
        }
    ],
    "icons": {
        "48": "ico/police_helper_48.png",
        "128": "ico/police_helper_128.png"
    },
    "action": {
        "default_popup": "popup/index.html",
        "default_title": "Police Helper"
    }
}